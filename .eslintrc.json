{
  "root": true,
  "extends": ["airbnb-base", "plugin:promise/recommended"],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "promise"
  ],
  "rules": {
    "max-len": "off",
    "no-console": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  }
}
