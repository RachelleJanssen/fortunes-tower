{
  "name": "typescript_boilerplate",
  "version": "1.0.0",
  "description": "A template for future typescript projects",
  "main": "build/main/scs/index.js",
  "typings": "build/main/src/index.d.ts",
  "module": "build/module/scs/index.js",
  "scripts": {
    "build": "run-s clean && run-p build:main",
    "build:main": "tsc -p tsconfig.json",
    "clean": "trash build test",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "cov:html": "nyc report --reporter=html",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "info": "npm-scripts-info",
    "serve": "node ./build/main/src/index.js",
    "serve:watch": "nodemon ./build/main/src/index.js",
    "test": "run-s fix:* build test:*",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\""
  },
  "scripts-info": {
    "build": "Clean and rebuild the project",
    "clean": "Clean the build output folders",
    "cov": "Rebuild, run tests, then create and open the coverage report in HTML",
    "cov:check": "Check the code coverage in the terminal",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "fix": "format files using prettier and try to automatically fix all other linting issues",
    "info": "Display information about the package scripts",
    "test": "Lint and unit test the project",
    "test:unit": "Unit test the project",
    "watch": "Clean, build and watch for changes. Use this for developing mode"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [],
  "author": "Rachelle Janssen",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^10.12.15",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "express-xml-bodyparser": "^0.3.0",
    "joi": "^14.3.0",
    "lodash": "^4.17.11",
    "semver": "^5.6.0",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/express-xml-bodyparser": "^0.3.1",
    "@types/joi": "^14.0.1",
    "@types/mocha": "^5.2.5",
    "@types/semver": "^5.5.0",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.3",
    "ava": "^1.0.1",
    "codecov": "^3.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-promise": "^4.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "nyc": "^13.0.1",
    "opn-cli": "^4.0.0",
    "prettier": "^1.15.3",
    "supertest": "^3.3.0",
    "trash": "^4.3.0",
    "trash-cli": "^1.4.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 140
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
